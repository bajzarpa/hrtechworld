.timeline
  margin: 70px 0 65px 0

  ul
    display: flex
    list-style: none
    margin: 0
    padding: 0
    justify-content: center
    align-items: center

    li
      // Exceptions & overrides
      &:nth-child(1)
      &:nth-child(3)
        a
          &:after
            content: none

      &.hilight
        a
          color: #18a8e1
          font-weight: 600
          padding: 0 25px

          &:after
          &:before
            font-size: 25px

          &:before
            position: absolute
            content: '/'
            right: 0

      // Common rules
      a
        display: flex
        justify-content: center
        align-items: center
        text-decoration: none
        text-transform: uppercase
        color: #bee6f2
        font-weight: 300
        font-size: 18px
        padding: 0 15px
        position: relative

        &:after
          content: '/'
          position: absolute

        &:after
          left: 0

        img
          margin-left: 10px

        small
          font-weight: bold
          color: #ffffff
          background: #bee6f2
          padding: 3px
          margin-left: 5px
