@import '../../helpers'

.package
  background: #f8f8f8
  box-shadow: 0 3px 10px rgba(#333333, .25)
  margin-right: 15px
  padding: 23px 15px 60px 15px
  flex-grow: 1
  flex-basis: 0
  position: relative

  // When a package is popular that have different sizes, and colors, all exceptions below here
  &.popular
    padding: 30px 15px 60px 15px

    .until
      margin-bottom: 45px

    button
      background: #ff0033

    h3
      margin-bottom: 40px

    .price
      margin-bottom: 45px

    .toggle-area
      ul
        margin-bottom: 115px


  // Different transition timeouts for each boxes
  for i in 1 .. 4
    &:nth-child({i})
      .toggle-area
        transition-delay unit(i*100, 'ms')

  &:nth-child(4)
    margin-right: 0

  // Handling collapse
  &.open
    .toggle-area
      max-height: 300px

  h3
    font-size: toVw(20px)
    color: #18a8e1
    margin-bottom: 25px
    margin-top: 0
    text-transform: uppercase
    text-align: center
    font-weight: 900

    small
      color: #ff0033
      display: block
      font-weight: normal
      margin-bottom: 10px

  .price
    text-align: center
    font-weight: 900
    font-size: 60px
    margin-bottom: 25px
    color: #18a8e1

  .description
    color: #999999
    text-align: center
    font-size: 14px
    font-weight: 300
    margin-bottom: 10px

  .until
    font-size: 18px
    text-align: center
    color: #18a8e1
    margin-bottom: 25px

  .promo-input
    input
      width: 100%
      margin-top: 5px
      margin-bottom: 12px
      padding: 5px
      font-style: italic
      font-size: 14px
      color: #999999
      box-shadow: 0 0 3px 0 rgba(black, .2) inset
      border: 0

  .toggle-area
    max-height: 0
    overflow: hidden
    transition: all .5s ease
    will-change: auto

    ul
      margin-left: 35px
      padding-left: 0
      list-style: none
      margin-bottom: 95px

      li
        margin-bottom: 25px
        display: flex
        font-size: 15px
        color: #2c292a

        &:before
          content: "â€¢"
          display: block
          margin-right: 15px
          color: #18a8e1

  button
    position: absolute
    bottom: 0
    right: 0
    left: 0
    height: 60px
    line-height: @height
    width: 100%
    border: 0
    background: #18a8e1
    color: #ffffff
    text-transform: uppercase
    font-weight: 900
    border-radius: 0
    transition: all .5s ease
    will-change: auto

    &:hover
      transform: scale(1.025)
      z-index: 1
      box-shadow: 0 3px 10px rgba(#333333, .25)
