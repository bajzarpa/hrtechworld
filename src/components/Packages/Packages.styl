@import '../../helpers'

.packages-container
  display: flex
  flex-wrap: wrap
  justify-content: center
  align-items: center
  max-width: 80vw
  margin: toVw(60px) auto 0 auto

  .button-wrapper
    display: flex
    width: 100%
    justify-content: center
    align-items: center
    margin-top: toVw(80px)

    button
      background: transparent
      color: #18a8e1
      border: 1px solid
      border-radius: 0
      font-weight: bold
      text-transform: uppercase
      font-size: 14px
      padding: 15px 35px
      transition: all .2s ease
      will-change: auto

      &:hover
        background: #18a8e1
        color: #ffffff